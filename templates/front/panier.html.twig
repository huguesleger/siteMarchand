{% extends 'baseFront.html.twig' %}
{% block header %}
    <nav class="nav-breadcrumb" aria-label="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{path("home")}}">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Panier</li>
            </ol>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <div class="detail-panier">
        <div class="container">
            <div class="border p-md-5">
                <h3 class="mb-4">Détail du panier</h3>
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead>
                        <tr class="table-active">
                            <th scope="col">#</th>
                            <th scope="col">Article</th>
                            <th scope="col">Quantité</th>
                            <th scope="col">Prix Unitaire</th>
                            <th scope="col">Total</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row"><img class="img-thumbnail img-fluid" src="https://via.placeholder.com/90" alt=""></th>
                            <td>
                                <div>
                                    <h5>Article nom</h5>
                                    <p>Article ref</p>
                                </div>
                            </td>
                            <td>
                                <div class="row no-gutters">
                                    <div class="col-lg-5 col-sm-12">
                                        <input class="form-control" type="number" value="1" min="1" max="100"/>
                                    </div>
                                </div>
                            </td>
                            <td>Article prix</td>
                            <td>Article prix</td>
                            <td><i class="fas fa-trash-alt"></i></td>
                        </tr>
                        </tbody>
                        <tfoot>
                        <tr class="text-right">
                            <td></td>
                            <td colspan="4">Total</td>
                            <td>prix</td>
                        </tr>
                        <tr class="text-right">
                            <td></td>
                            <td colspan="4">Frais de port</td>
                            <td>prix</td>
                        </tr>
                        <tr class="table-active text-right">
                            <td></td>
                            <td colspan="4">Total</td>
                            <td>prix</td>
                        </tr>
                        <tr class="text-right">
                            <td></td>
                            <td colspan="4">TVA</td>
                            <td>prix</td>
                        </tr>
                        <tr class="quantity text-right">
                            <td></td>
                            <td colspan="4">Quantité totale</td>
                            <td>nbr</td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="next-panier border p-md-4">
                        <div class="d-inline-flex mr-auto">
                            <a href="#" class="btn btn-success btn-sm"><i class="fas fa-sync-alt mr-2"></i>Mise à jour du panier</a>
                        </div>
                        <div class="d-inline-flex ml-auto">
                            <a href="#" class="btn btn-primary btn-sm"><i class="fas fa-long-arrow-alt-right mr-2"></i>Valider le panier</a>
                        </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}